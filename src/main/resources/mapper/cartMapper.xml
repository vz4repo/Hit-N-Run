<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.homerunball.cart.dao.CartMapper">

    <select id="count" resultType="int">
        select count(*) from cart;
    </select>

    <!-- 한 고객의 장바구니 선택 삭제-->
    <delete id="delete" parameterType="map" >
        delete from cart
        where c_id = #{c_id}
        and pd_id = #{pd_id}
        and pd_clsf_code = #{pd_clsf_code}
    </delete>

    <!--한 고객의 장바구니 전체삭제 TDD구현하기-->
    <delete id="cidDeleteAll" parameterType="string">
        delete from cart where c_id = #{c_id}
    </delete>

    <!--모든유저 데이터 전체삭제-->
    <delete id="deleteAll">
        delete from cart
    </delete>

    <!--장바구니추가-->
    <insert id="insert" parameterType="CartDto">
        insert into cart (c_id, pd_id, pd_clsf_code, cart_cnt)
        values (#{c_id}, #{pd_id}, #{pd_clsf_code}, #{cart_cnt})
    </insert>

    <sql id="selectCart">
        select c_id, pd_id, pd_clsf_code, cart_cnt
        from cart
    </sql>

    <!--select 1건-->
    <select id="select" parameterType="string" resultType="CartDto">
        <include refid="selectCart"/>
        where c_id = #{c_id}
    </select>

    <!--select List-->
    <select id="selectUser" parameterType="string" resultType="CartDto">
        <include refid="selectCart"/>
        where c_id = #{c_id}
    </select>

    <select id="selectAll" resultType="CartDto">
        <include refid="selectCart"/>
        order by frst_reg_dt desc, c_id desc
    </select>

    <!--장바구니 update-->
    <update id="update" parameterType="CartDto">
        update cart
        set pd_id = #{pd_id}
        , pd_clsf_code = #{pd_clsf_code}
        , cart_cnt = #{cart_cnt}
        where c_id = #{c_id} and pd_id = #{pd_id}
    </update>

    <!-- Cart 장바구니 중복객체인지 확인 -->
    <select id="cartCheck" resultType="CartDto">
        select * from cart
        where c_id = #{c_id} and pd_id = #{pd_id} and pd_clsf_code = #{pd_clsf_code}
    </select>

</mapper>